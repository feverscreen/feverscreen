{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "sourceMap": true,
        "baseUrl": "../../src",
        "rootDir": "../../",
        "moduleResolution": "node",
        "types": ["node"],
        "paths": {
            "@/*": ["*"] // resolve all modules prefixed with `@/` from `src` directory
        }
    },
    "typeRoots": [
        "./node_modules/**/types",
        "./node_modules/**/@types"
    ],
    "include": [
        "./"
    ]
}
